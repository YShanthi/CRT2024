import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        sc.close();
        if(n%2==1) 
        {
            int term=(n-1)/2*2;
            System.out.println(term);
        } 
        else 
        {
            int term=(n-1)/2;
            System.out.println(term);
        }
    }
}
