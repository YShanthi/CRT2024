import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=(int)a*b;
        if(c>1000)
        {
            System.out.println(a+b);
        }
        else
        {
            System.out.println(c);
        }
    }
}
